<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="View.graphic.Main"
            stylesheets="@../CSS/style1.css"
            prefHeight="1200.0" prefWidth="1900.0">
    <center>
        <VBox alignment="CENTER" spacing="35">
            <Label text="Welcome to the game" id="label"/>
            <Button text="Sign Up" onMouseClicked="#signup" styleClass="submit-button"/>
            <Button text="Login" onMouseClicked="#login" styleClass="submit-button"/>
            <Button text="Exit" onMouseClicked="#signup" styleClass="submit-button"/>
            <VBox alignment="CENTER" spacing="20">
                <HBox alignment="CENTER" spacing="5">
                    <Text text="Don't have an account?"/>
                    <Hyperlink text="Sign up" onMouseClicked="#changeMenuToSignUp"/>
                </HBox>
                <Hyperlink text="Start game as guest" onMouseClicked="#startGameAsGuest"/>
            </VBox>
        </VBox>
    </center>
</BorderPane>
